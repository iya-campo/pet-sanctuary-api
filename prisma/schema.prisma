generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?

  posts       Post[]
  adoptedPets Pet[]  @relation("AdoptedPets")
}

// ask dani if this model is necessary
model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  type      PostType

  user   User @relation(fields: [userId], references: [id])
  userId Int

  pet   Pet @relation(fields: [petId], references: [id])
  petId Int @unique
}

// pet model can also be the "post"
model Pet {
  id       Int     @id @default(autoincrement())
  name     String
  desc     String
  gender   Gender
  species  Species
  breed    String
  age      Int?
  imageUrl String?

  post Post?

  adopter   User? @relation("AdoptedPets", fields: [adopterId], references: [id])
  adopterId Int?
}

enum PostType {
  LOST
  FOUND
}

enum Gender {
  MALE
  FEMALE
}

enum Species {
  DOG
  CAT
  BIRD
}
